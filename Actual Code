#include <stdio.h> 

int leap(int lyear){ 
//    int leap; 
    if (lyear%400==0 && lyear%4==0 && lyear%100!=0){ 
        return 1; 
    } 
    else{ 
        return 0; 
    } 
} 


int main(void) { 
    int month, day, year, dif, doy; 

    printf("Enter the date \n"); 
    scanf("%d %d %d", &month, &day, &year); 
    //Gets Date 
     
    int x=leap(year); 
   //Leap Year 
        if (x==1){ 
            dif==29;
            printf("%d",x);
        //dif=days in february 
    } 
        if (x==0){ 
            dif==28;
            printf("%d",x);
    } 

    //Figuring out february 
    
    //switch statement
    switch (month){
        case 1:
            doy=day; 
            //doy=day of year
            if (doy%10==1){
                printf("%d/%d/%d is the %dst day of %d \n",month,day,year, doy, year );
            }
            if (doy%10==2){
                printf("%d/%d/%d is the %dnd day of %d \n",month,day,year, doy, year );
            }
            if (doy%10==3){
                printf("%d/%d/%d is the %drd day of %d \n",month,day,year, doy, year );
            }
            if (doy%10!=3 && doy%10!=2 && doy%10!=1){
                printf("%d/%d/%d is the %drd day of %d \n",month,day,year, doy, year );
        } 
        break;
        case 2:
            doy=day+31; 
            //doy=day of year
            if (doy%10==1){
            printf("%d/%d/%d is the %dst day of %d \n",month,day,year, doy, year );
            }
            if (doy%10==2){
                printf("%d/%d/%d is the %dnd day of %d \n",month,day,year, doy, year );
            }
            if (doy%10==3){
                printf("%d/%d/%d is the %drd day of %d \n",month,day,year, doy, year );
            }
            if (doy%10!=3 && doy%10!=2 && doy%10!=1){
                printf("%d/%d/%d is the %drd day of %d \n",month,day,year, doy, year );
            } 
            break;
        case 3:
            doy=day+31+dif; 
            //doy=day of year
            if (doy%10==1){
            printf("%d/%d/%d is the %dst day of %d \n",month,day,year, doy, year );
            }
            if (doy%10==2){
                printf("%d/%d/%d is the %dnd day of %d \n",month,day,year, doy, year );
            }
            if (doy%10==3){
                printf("%d/%d/%d is the %drd day of %d \n",month,day,year, doy, year );
            }
            if (doy%10!=3 && doy%10!=2 && doy%10!=1){
                printf("%d/%d/%d is the %drd day of %d \n",month,day,year, doy, year );
            } 
            break;
    }
    return (0); 
}

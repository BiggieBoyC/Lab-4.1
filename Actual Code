#include <stdio.h>

int leap(int lyear){
    if (lyear%400==0||lyear%4==0 && lyear%100!=0){
        return(1);
    }
    else{
        return(0);
    }
}

int main(void) {
    int month, day, year, dif, doy;
    
    printf("Enter the date \n");
    scanf("%d %d %d", &month, &day, &year);
    //Gets Date
    
    int x=leap(year);
    printf ("%d",x);
    //Leap Year
    
    if (x==1){
        dif==29;
        //dif=days in february
    }
    else{
        dif==28;
    }
    //Figuring out february
    
    if (month==1){
        int doy=day;
        //doy=day of year
        printf ("%d/%d/%d is the %dth day of %d",month,day,year, doy, year);
    }
    return (0);
}
